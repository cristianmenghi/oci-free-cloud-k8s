{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "docker:disable"
  ],
  "terraform": {},
  "flux": {
    "managerFilePatterns": [
      "/helm.yaml$/"
    ]
  },
  "groupName": "all",
  "timezone": "America/Montevideo",
  "schedule": [
    "before 3am on Monday"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": false
    }
  ]
}